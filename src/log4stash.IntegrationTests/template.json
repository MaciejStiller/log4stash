{
    "template" : "log_test_*",
    "settings" : {
        "number_of_shards" : 1
    },
    "mappings" : {
		"_default_" : {
            "_source" : { "enabled" : true },
			"dynamic_templates" : [
                {
                    "strings_match" : {
                        "match" : "*",
    					"match_mapping_type" : "string",
                        "mapping" : {
                            "type" : "string",
                            "index" : "not_analyzed"
                        }
                    }
                } 
            ]
		},

        "LogEvent" : {


			"properties" : {
				"Message" : {
					"type":"text",
					"index": "analyzed"
				},
				"@timestamp" : {
					"type":"date"
				}
			}
        }
    }
}
